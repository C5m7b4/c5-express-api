// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
  firstName String
  lastName  String
  password  String
}

model Store {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  storeNumber String
  terminals   String
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  upc         String
  description String
  retailPrice Float
  retailSplit Int
  price       Price?
  links       Link?
  Flag        Flag?
}

model Price {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  salePrice Float
  saleSplit Int
  saleStart DateTime
  saleEnd   DateTime
  tprPrice  Float
  tprSplit  Int
  tprStart  DateTime
  tprEnd    DateTime
  productId Int      @unique
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Link {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  productId    Int         @unique
  product      Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  category     Category?
  department   Department? @relation(fields: [departmentId], references: [id])
  departmentId Int?
}

model Flag {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  productId Int      @unique
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  tax1      Int
  tax2      Int
  tax3      Int
  tax4      Int
  fs        Int
  wic       Int
}

model Category {
  id          Int      @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  linkId      Int      @unique
  link        Link     @relation(fields: [linkId], references: [id])
}

model Department {
  id          Int      @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  Link        Link[]
}
